@model List<Models.Entities.Category>


@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="text-center bg-light p-5 rounded shadow-sm">
        <h1 class="display-4 text-success mb-3">🍽️ Welcome to TasteBud!</h1>
        <p class="lead">Discover, share, and enjoy homemade recipes from all over the world.</p>
        <hr class="my-4" />
        <p class="text-muted">Get started by <a href="/Account/Register" class="text-decoration-none">creating an account</a> or <a href="/Account/Login" class="text-decoration-none">logging in</a>.</p>
        <a class="btn btn-success btn-lg mt-3" href="/Recipes" role="button">🍳 Browse Recipes</a>
    </div>

    <div class="text-center mt-5">
        <h4 class="text-secondary">Browse by Category</h4>
        <div class="d-flex flex-wrap justify-content-center gap-3 mt-3">
            @foreach (var cat in Model)
            {
                <a class="btn btn-outline-success" href="/Recipes/ByCategory/@cat.Id">
                    @cat.Name
                </a>
            }
        </div>
    </div>

</div>
